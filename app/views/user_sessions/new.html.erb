<!--[if !IE]>start login wrapper<![endif]-->
<div id="login_wrapper">
  <div class="error" style="display:<%= @is_failed ? 'true' : 'none'%>;">
    <div class="error_inner">
      <strong>Access Denied</strong> | <span>user/password combination wrong</span>
    </div>
  </div>
  <!--[if !IE]>start login<![endif]-->
  <%= form_for @user_session, :url => user_sessions_path do |f| %>
    <fieldset>
      <h1 style="height:44px;font-size:22px;">
        <%= image_tag('/assets/finfore-logo.png',:style=>"height:30px;padding-top:7px;float:left") %>
        <span style="float:right;padding-right:10px;">Log-In</span>
      </h1>
      <div class="formular">
        <span class="formular_top"></span>
        <div class="formular_inner">
          <label>
            <strong>Username:</strong>
            <span class="input_wrapper">
              <%= f.text_field :login %>
            </span>
          </label>
          <label>
            <strong>Password:</strong>
            <span class="input_wrapper">
              <%= f.password_field :password %>
            </span>
          </label>
          <label class="inline">
            <%= f.check_box :remember_me %>
              remember me on this computer
          </label>
          <ul class="form_menu">
            <li>
              <span class="button">
                <span><span><em>SUBMIT</em></span></span>
                <input type="submit" name=""/>
              </span>
            </li>
            <li>
              <span class="button">
                <span>
                  <span>
                    <a href="http://live-test.finfore.net">BACK TO SITE</a>
                  </span>
                </span>
              </span>
            </li>
          </ul>
        </div>
        <span class="formular_bottom"></span>
      </div>
    </fieldset>
  <% end %>
  <!--[if !IE]>end login<![endif]-->

  <!--[if !IE]>start reflect<![endif]-->
  <span class="reflect"></span>
  <span class="lock"></span>
  <!--[if !IE]>end reflect<![endif]-->
</div>
<!--[if !IE]>end login wrapper<![endif]-->
